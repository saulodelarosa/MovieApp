@using ApplicationCore.Models
@model IEnumerable<CastResponseModel>


<h2>All Actors</h2>
<a class="nav-link " asp-area="" asp-controller="Cast" asp-action="Create">Add New Actor</a>



   @foreach(var x in Model){
   <div class="card" style="width: 18rem; display: inline-block;">
            <img class="card-img-top" style="object-fit:cover; height: 25rem" src="@x.ProfilePath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@x.Name</h5>
                        <a class="btn btn-primary" asp-action="Detail" asp-controller="Cast" asp-route-id="@x.Id">Details</a>
            </div>
   </div>
   }





<table>
    @{
            <div class="row">
            @foreach (var m in Model)
        {

                <div class="card col-3" style="margin-right:2px; margin-bottom:5px;" >
                
                    <img src="@m.ProfilePath" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@m.Name</h5>
                        <a class="btn btn-primary" asp-action="Detail" asp-controller="Cast" asp-route-id="@m.Id">Details</a>
                    </div>
                </div>


        }
            </div>

    }
</table>


