@using ApplicationCore.Models
@model IEnumerable<CastResponseModel>


<h2>All Actors</h2>
<a class="nav-link " asp-area="" asp-controller="Cast" asp-action="Create">Add A New Actor</a>

<style>
    .container{
        margin-left: 30px;
        margin-right: 15px

    }
</style>

   @foreach(var x in Model){
   <div class="card" style="width: 15rem; display: inline-block; margin-bottom:5px;">
            <img class="card-img-top" style="object-fit:cover; height: 20rem" src="@x.ProfilePath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@x.Name</h5>
                        <a class="btn btn-primary" asp-action="Detail" asp-controller="Cast" asp-route-id="@x.Id">Details</a>
            </div>
   </div>
   }





<table>
    @{
                    <div class="row">
                    @foreach (var m in Model)
        {

                        <div class="card col-2" style="margin-right:5px; margin-bottom:5px;" >
                        
                            <img src="@m.ProfilePath" style="object-fit:contain;" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@m.Name</h5>
                                <a class="btn btn-primary" asp-action="Detail" asp-controller="Cast" asp-route-id="@m.Id">Details</a>
                            </div>
                        </div>


        }
                    </div>

    }
</table>


